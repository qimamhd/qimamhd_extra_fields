<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_move_form_extra_fields_tab" model="ir.ui.view">
        <field name="name">account.move.form.extra.fields.tab</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Extra Fields" name="extra_fields_tab">
                    <group>
                        <t t-foreach="env['sale.extra.field.config'].search([('visible','=',True)])" t-as="ef">
                            <t t-if="ef.field_type == 'char'">
                                <field name="ef.name" string="t-esc='ef.custom_label or ef.default_label'"/>
                            </t>
                            <t t-if="ef.field_type == 'float'">
                                <field name="ef.name" string="t-esc='ef.custom_label or ef.default_label'"/>
                            </t>
                            <t t-if="ef.field_type == 'boolean'">
                                <field name="ef.name" string="t-esc='ef.custom_label or ef.default_label'"/>
                            </t>
                            <t t-if="ef.field_type == 'date'">
                                <field name="ef.name" string="t-esc='ef.custom_label or ef.default_label'"/>
                            </t>
                            <t t-if="ef.field_type == 'selection'">
                                <field name="ef.name" string="t-esc='ef.custom_label or ef.default_label'"/>
                            </t>
                        </t>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>