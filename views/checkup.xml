<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="checkup_procedure_extend" model="ir.ui.view">
		<field name="name">checkup_procedure_extend</field>
		<field name="model">mizan.car.checkup.procedure.master</field>
		<field name="inherit_id" ref="qimamhd_mizan_car_13.checkup_procedure_form_view" />
		<field name="arch" type="xml">

		
			<xpath expr = "//field[@name = 'vin_no']"  position="after">
                   <field name="drum_counter" attrs="{'readonly':['|','|','|',('create_invoice_manually_id','!=', False), ('is_user_sale_man', '=', False),('state','in',['execute_request','execute_completed','cancel_order','work_order_started'])]}" />
                   <field name="drum_counter_exit" attrs="{'readonly':['|','|','|',('create_invoice_manually_id','!=', False), ('is_user_sale_man', '=', False),('state','in',['execute_request','execute_completed','cancel_order','work_order_started'])]}" />
                   
            </xpath>
			<xpath expr="//field[@name='create_date']" position="attributes">
				<attribute name="attrs">{'readonly':['|', ('is_user_sale_man', '=', False),('state','in',['execute_completed','cancel_order'])]}</attribute>
			</xpath>

			<xpath expr = "//field[@name = 'result_lines']/tree/field[@name = 'checkup_part_result_id']"  position="attributes">
                         <attribute name="invisible">1</attribute>
                         <attribute name="required">0</attribute>
                   
            </xpath>

		</field>
	</record>


</odoo>