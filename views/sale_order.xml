<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_sale_order_form_extra_fields_tab" model="ir.ui.view">
		<field name="name">sale.order.form.extra.fields.tab</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook" position="inside">
				<page string="Extra Fields" name="extra_fields_tab">
					<group>
						<field name="extra_visible_map" invisible="1"/>
						<field name="extra_required_map" invisible="1"/>
					 <field name="x_extra_text_1"  attrs="{'invisible': [('extra_visible_map.x_extra_text_1','=',False)],
															'required': [('extra_required_map.x_extra_text_1','=',True)]
														}"/>
						<field name="x_extra_text_2"/>
						<field name="x_extra_number_1"/>
						<field name="x_extra_date_1"/>
					</group>
				</page>
			</xpath>
		</field>
	</record>


</odoo>